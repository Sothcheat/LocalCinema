<UserControl
    x:Class="LocalCinema.Controls.MovieCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border 
        x:Name="CardBorder"
        Background="{StaticResource SurfaceBrush}"
        CornerRadius="8"
        Width="200"
        Height="320"
        Margin="10"
        PointerEntered="Card_PointerEntered"
        PointerExited="Card_PointerExited">

        <Border.Shadow>
            <ThemeShadow/>
        </Border.Shadow>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Poster Image -->
            <Border Grid.Row="0" CornerRadius="8,8,0,0">
                <Image 
                    Source="{x:Bind Movie.PosterPath, Mode=OneWay}"
                    Stretch="UniformToFill"/>
            </Border>

            <!-- Movie Info -->
            <StackPanel 
                Grid.Row="1" 
                Background="#AA000000"
                Padding="12,10">

                <TextBlock 
                    Text="{x:Bind Movie.Title, Mode=OneWay}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    TextTrimming="CharacterEllipsis"
                    MaxLines="2"
                    LineHeight="18"/>

                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,6,0,0">
                    <TextBlock 
                        Text="{x:Bind Movie.Year, Mode=OneWay}"
                        FontSize="12"
                        Foreground="#FFB3B3B3"/>

                    <TextBlock 
                        Text="{x:Bind FormatRuntime(Movie.Runtime), Mode=OneWay}"
                        FontSize="12"
                        Foreground="#FFB3B3B3"/>
                </StackPanel>

                <!-- Rating -->
                <TextBlock 
                    Text="{x:Bind FormatRating(Movie.VoteAverage), Mode=OneWay}"
                    FontSize="11"
                    Foreground="#FFFFD700"
                    Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>